{
  "manifest_version": 3,
  "name": "Yandex Mail EML Downloader",
  "version": "1.0",
  "description": "Скачивает письма из Яндекс.Почты в формате .eml",
  "permissions": [
    "activeTab",
    "scripting",
    "downloads",
    "webRequest",
    "tabs"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },

  "host_permissions": ["*://mail.yandex.ru/*"]
}